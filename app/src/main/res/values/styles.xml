<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="ContainerLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="background">@drawable/container_login</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ContainerCriarTurma">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">500dp</item>
        <item name="background">@drawable/container_login</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <style name="TextCriarTurma">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/azul_escuro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="campopadrao">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/campo_padrao</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">45</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:maxLines">1</item>
        
    </style>

    <style name="Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">40dp</item>
    <item name="android:layout_marginRight">40dp</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:padding">20dp</item>@@
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="textAllCaps">false</item>
    <item name="android:background">@drawable/button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextForgotPass">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textAllCaps">false</item>
      <item name="android:textColor">@color/azul_escuro</item>
      <item name="android:textSize">18sp</item>
      <item name="android:textStyle">bold</item>
    </style>
</resources>